# VibeKit Environment Configuration
# Copy this file to .env and fill in your actual values

# ===================================================================
# AI Agent API Keys (at least one required)
# ===================================================================

# OpenAI API Key (for Codex agent)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# Anthropic API Key (for Claude agent)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google API Key (for Gemini agent)
GOOGLE_API_KEY=...
GOOGLE_MODEL=gemini-1.5-pro

# Groq API Key (for OpenCode agent)
GROQ_API_KEY=gsk_...
GROQ_MODEL=llama-3.1-70b-versatile

# ===================================================================
# GitHub Integration (optional, required for PR creation)
# ===================================================================

# GitHub Personal Access Token
GITHUB_TOKEN=ghp_...

# Default repository for PR operations (format: owner/repo)
GITHUB_REPOSITORY=your-username/your-repo

# ===================================================================
# Default Agent Configuration
# ===================================================================

# Default agent to use when none specified
VIBEKIT_DEFAULT_AGENT=claude

# Default model (overrides agent-specific defaults)
VIBEKIT_DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Default timeout for operations (milliseconds)
VIBEKIT_DEFAULT_TIMEOUT=30000

# Default working directory in sandboxes
VIBEKIT_DEFAULT_WORKING_DIR=/vibe0

# ===================================================================
# Docker Configuration
# ===================================================================

# Docker registry to use
DOCKER_REGISTRY=docker.io

# Your Docker Hub username (for image uploads)
DOCKER_USERNAME=your-username

# Prefer registry images over local builds
VIBEKIT_PREFER_REGISTRY_IMAGES=true

# ===================================================================
# Local Provider Settings
# ===================================================================

# Directory for VibeKit data storage
VIBEKIT_STORAGE_PATH=~/.vibekit

# Log level (debug, info, warn, error)
VIBEKIT_LOG_LEVEL=info

# Maximum number of concurrent environments
VIBEKIT_MAX_ENVIRONMENTS=10

# ===================================================================
# Telemetry Configuration (optional)
# ===================================================================
# Note: These settings are for telemetry when used as part of VibeKit
# For standalone telemetry package usage, see packages/telemetry/.env.example

# Enable telemetry tracking
VIBEKIT_TELEMETRY_ENABLED=false

# Service Configuration
VIBEKIT_TELEMETRY_SERVICE_NAME=vibekit-cli
VIBEKIT_TELEMETRY_SERVICE_VERSION=1.0.0

# Storage Configuration
TELEMETRY_STORAGE_TYPE=sqlite
TELEMETRY_STORAGE_PATH=.vibekit/telemetry.db

# OpenTelemetry Configuration (optional)
VIBEKIT_TELEMETRY_ENDPOINT=https://your-telemetry-endpoint.com/v1/traces
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# OTEL_SERVICE_NAME=${VIBEKIT_TELEMETRY_SERVICE_NAME}
# OTEL_SERVICE_VERSION=${VIBEKIT_TELEMETRY_SERVICE_VERSION}

# Custom headers for telemetry requests (JSON format)
VIBEKIT_TELEMETRY_HEADERS={"Authorization": "Bearer your-token"}

# Telemetry request timeout (milliseconds)
VIBEKIT_TELEMETRY_TIMEOUT=5000

# Sampling ratio (0.0 to 1.0) - 1.0 means 100% sampling
VIBEKIT_TELEMETRY_SAMPLING_RATIO=1.0

# Session ID for telemetry correlation (auto-generated if not provided)
VIBEKIT_TELEMETRY_SESSION_ID=

# ===================================================================
# Telemetry API Server Configuration (when running standalone)
# ===================================================================

# API Server Configuration
TELEMETRY_API_ENABLED=false
TELEMETRY_API_PORT=3000
TELEMETRY_API_HOST=localhost

# Security Configuration
TELEMETRY_SECURITY_ENABLED=true
TELEMETRY_ENCRYPTION_ENABLED=false
# TELEMETRY_ENCRYPTION_KEY=your-64-hex-char-key-here (generate with: openssl rand -hex 32)
TELEMETRY_PII_DETECTION_ENABLED=true
TELEMETRY_RETENTION_DAYS=30

# CORS Configuration (comma-separated origins, empty to disable)
TELEMETRY_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.example.com

# API Authentication
TELEMETRY_AUTH_ENABLED=true
# Generate API keys with: openssl rand -hex 32
TELEMETRY_API_KEYS=your-api-key-1,your-api-key-2
TELEMETRY_BEARER_TOKENS=your-bearer-token-1,your-bearer-token-2

# Streaming Configuration
TELEMETRY_STREAMING_ENABLED=true
TELEMETRY_STREAMING_TYPE=websocket
TELEMETRY_STREAMING_PORT=3001

# Analytics Configuration
TELEMETRY_ANALYTICS_ENABLED=true
TELEMETRY_ANALYTICS_BUCKET_SIZE_MS=60000

# Export Configuration
TELEMETRY_EXPORT_SCHEDULER_ENABLED=false
# TELEMETRY_EXPORT_SCHEDULE_CRON=0 0 * * *
# TELEMETRY_EXPORT_FORMAT=parquet
# TELEMETRY_EXPORT_DESTINATION=./exports

# Performance Configuration
TELEMETRY_BATCH_SIZE=100
TELEMETRY_FLUSH_INTERVAL_MS=5000
TELEMETRY_MAX_QUEUE_SIZE=10000

# Rate Limiting
TELEMETRY_RATE_LIMIT_ENABLED=true
TELEMETRY_RATE_LIMIT_MAX_REQUESTS=1000
TELEMETRY_RATE_LIMIT_WINDOW_MS=60000

# Circuit Breaker
TELEMETRY_CIRCUIT_BREAKER_ENABLED=true
TELEMETRY_CIRCUIT_BREAKER_THRESHOLD=5
TELEMETRY_CIRCUIT_BREAKER_TIMEOUT_MS=60000

# ===================================================================
# Development Settings
# ===================================================================

# Enable debug logging for troubleshooting
DEBUG=vibekit:*

# Node environment
NODE_ENV=development
